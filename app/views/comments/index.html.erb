<h1>Listing offposts</h1>

<table>
  <tr>
    <th>Installation</th>
    <th>Neighborhood</th>
    <th>Distance</th>
    <th>Drive</th>
    <th>Content</th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%=h comment.content %></td>
    <td><%=h comment.stars %></td>
    <td><%= link_to 'Show', comment %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', polymorphic_path([@parents, comment].flatten), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

