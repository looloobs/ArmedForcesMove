<% form_tag users_path, :method => :get do %>
  <%= text_field_tag "search[terms]", params[:search][:terms] %>
  <br />
Status: <%= select_tag "search[login]", options_for_select(User.all.collect{ |c| [c.login, c.login]}) %>
  <br />
  <br />
  <%= submit_tag "Search" %>
<% end %>

<table>
  <tr>
    <th>Login</th>
    <th>Name</th>
    <th>Email</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
	<td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_session_path %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>