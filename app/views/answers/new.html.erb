<h1>New answer</h1>

<% form_for @answer, :url => polymorphic_path([@parents, :answers].flatten) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', polymorphic_path([@parents].flatten) %>