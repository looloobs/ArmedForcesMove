<h1>New learn</h1>


<% form_for ([:installation, @learn]) do |f| %>
  <%= f.error_messages %>


<%= hidden_field_tag('learn[installation_id]', @installation.id) %>

<%= f.collection_select(:offpost_id, @offposts, :id, :neighborhood, {:prompt => true}) %>

  <p>
	<%= f.label :category %><br />
    <%= f.select(:category, [["Preschool", "Preschool"], ["Elementary School", "Elementary School"], ["Middle School", "Middle School"], ["High School", "High School"]]) %>
  </p>
  <p>
    <%= f.label :info %><br />
    <%= f.text_area :info %>
  </p>
  <p>
    <%= f.label :onpost %><br />
    <%= f.check_box :onpost %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </p>
  <p>
    <%= f.label :zip %><br />
    <%= f.text_field :zip %>
  </p>
  <p>
    <%= f.label :web %><br />
    <%= f.text_field :web %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

