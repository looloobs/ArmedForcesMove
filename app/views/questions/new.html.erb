<h1>New question</h1>
<div id="form">
<% form_for(@question) do |f| %>
  <%= f.error_messages %>

<%= hidden_field_tag('question[installation_id]', @installation.id) %>

  <p>
    <%= f.label :question %><br />
    <%= f.text_area :question %>
  </p>
  
  <p>
	<%= f.label :tag, 'Separate with commas' %>
	<%= text_field :question, :tag_list %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
</div>

