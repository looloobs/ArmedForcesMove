<h1>Listing offposts</h1>

<table>
  <tr>
    <th>Installation</th>
    <th>Neighborhood</th>
    <th>Distance</th>
    <th>Drive</th>
    <th>Content</th>
  </tr>

<% @offposts.each do |offpost| %>
  <tr>
    <td><%=h offpost.installation %></td>
    <td><%=h offpost.neighborhood %></td>
    <td><%=h offpost.distance %></td>
    <td><%=h offpost.drive %></td>
    <td><%=h offpost.content %></td>
    <td><%= link_to 'Show', offpost %></td>
    <td><%= link_to 'Edit', edit_offpost_path(offpost) %></td>
    <td><%= link_to 'Destroy', offpost, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New offpost', new_offpost_path %>