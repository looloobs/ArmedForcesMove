<h1>New offpost</h1>

<% form_for(@offpost) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :installation %><br />
    <%= f.collection_select :installation_id, Installation.find(:all), :id, :name, :prompt=> "Select A Post"%>
  </p>
  <p>
    <%= f.label :neighborhood %><br />
    <%= f.text_field :neighborhood %>
  </p>
  <p>
    <%= f.label :distance %><br />
    <%= f.text_field :distance %>
  </p>
  <p>
    <%= f.label :drive %><br />
    <%= f.text_field :drive %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

